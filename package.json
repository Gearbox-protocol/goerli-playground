{
  "name": "hardhat-project",
  "scripts": {
    "build": "yarn clean && yarn compile --no-typechain && yarn abifix && yarn typegen",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "fork": "scripts/fork.sh",
    "typegen": "npx typechain --target=ethers-v5 './artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json' --out-dir types",
    "abifix": "npx ts-node scripts/abifix.ts",
    "verify": "npx hardhat run node_modules/@gearbox-protocol/devops/lib/verifier/verify.js",
    "deploy-curve": "yarn build && npx hardhat run --network kovan scripts/curveDeploy.ts --no-compile"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.2",
    "@gearbox-protocol/devops": "0.0.16",
    "@gearbox-protocol/sdk": "^0.0.109",
    "@openzeppelin/contracts": "^4.7.3",
    "fs-extra": "^10.1.0",
    "hardhat-contract-sizer": "^2.6.1",
    "tslog": "^3.3.3"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-vyper": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-alloy": "^4.6.2",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}