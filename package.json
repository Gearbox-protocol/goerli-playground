{
  "name": "@gearbox-protocol/goerli-playground",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn clean && yarn compile --no-typechain && yarn abifix && yarn typegen",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "typegen": "npx typechain --target=ethers-v5 './artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json' --out-dir types",
    "abifix": "npx ts-node scripts/abifix.ts",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "prettier:ci": "npx prettier --check .",
    "lint": "eslint \"**/*.ts\" --fix",
    "lint:ci": "eslint \"**/*.ts\"",
    "typecheck:ci": "tsc --noEmit"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.2",
    "@gearbox-protocol/devops": "^1.0.0",
    "@gearbox-protocol/sdk": "^1.2.0",
    "@openzeppelin/contracts": "^4.7.3",
    "add": "^2.0.6",
    "fs-extra": "^10.1.0",
    "hardhat-contract-sizer": "^2.6.1",
    "inquirer": "^8.2.3",
    "tslog": "^3.3.4",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@gearbox-protocol/eslint-config": "^1.5.7",
    "@gearbox-protocol/prettier-config": "^1.4.1",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-vyper": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^9.0.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.14",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.23.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.0",
    "hardhat": "^2.10.2",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.2"
  },
  "prettier": "@gearbox-protocol/prettier-config",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{sol,json,md}": "prettier --write"
  }
}
